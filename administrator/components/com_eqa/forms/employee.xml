<?xml version="1.0" encoding="utf-8" ?>
<form>
    <fieldset name="employee"  addfieldprefix="Kma\Component\Eqa\Administrator\Field">
        <field
                name="id"
                type="hidden"
        />

        <field
                name="code"
                type="text"
                label="COM_EQA_FORM_EMPLOYEE_CODE_LABEL"
                required="false"
                pattern="[A-Z0-9\-\.]{2,10}"
                hint="Mã cán bộ nhân viên có thể gồm chữ hoa, chữ số, dấu chấm (.) và gạch nối (-)"
        />
        <field
                name="lastname"
                type="text"
                label="COM_EQA_FORM_EMPLOYEE_LAST_NAME_LABEL"
                required="true"
                hint="Nguyễn Thị Bích"
        />
        <field
                name="firstname"
                type="text"
                label="COM_EQA_FORM_EMPLOYEE_FIRST_NAME_LABEL"
                required="true"
                hint="Giang"
        />
        <field
                name="unit_id"
                type="unit"
                required="true"
                class="select2-basic"
                label="COM_EQA_FORM_EMPLOYEE_UNIT_LABEL"
        >
            <option value="">COM_EQA_FORM_EMPLOYEE_UNIT_REQUEST</option>
        </field>
        <field
                name="email"
                type="email"
                label="COM_EQA_GENERAL_EMAIL"
        />
        <field
                name="mobile"
                type="tel"
                label="COM_EQA_GENERAL_MOBILE"
        />
        <field
                name="description"
                type="textarea"
                label="COM_EQA_GENERAL_DESC"
        />
        <field
                name="created_by"
                type="text"
                readonly="true"
                label="COM_EQA_GENERAL_CREATED_BY"
        />
        <field
                name="created_at"
                type="text"
                readonly="true"
                label="COM_EQA_GENERAL_CREATED_AT"
        />
        <field
                name="updated_by"
                type="text"
                readonly="true"
                label="COM_EQA_GENERAL_UPDATED_BY"
        />
        <field
                name="updated_at"
                type="text"
                readonly="true"
                label="COM_EQA_GENERAL_UPDATED_AT"
        />
    </fieldset>
</form>
