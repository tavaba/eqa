<?xml version="1.0" encoding="utf-8" ?>
<form>
    <fieldset name="subject" addfieldprefix="Kma\Component\Eqa\Administrator\Field">
        <field
                name="id"
                type="hidden"
        />
        <field
                name="unit_id"
                type="department"
                required="true"
                default=""
                class="select2-basic"
                label="COM_EQA_FORM_SUBJECT_DEPARTMENT_LABEL"
        />
        <field
                name="code"
                type="text"
                label="COM_EQA_FORM_SUBJECT_CODE_LABEL"
                required="true"
                pattern="[A-Z0-9.]{2,20}"
                hint="Mã học phần gồm chữ hoa, chữ số"
        />
        <field
                name="name"
                type="text"
                label="COM_EQA_FORM_SUBJECT_NAME_LABEL"
                required="true"
        />
        <field
                name="degree"
                type="degree"
                required="true"
                label="COM_EQA_FORM_SUBJECT_DEGREE_LABEL"
        >
            <option value="">COM_EQA_FORM_SUBJECT_DEGREE_MSG</option>
        </field>
        <field
                name="credits"
                type="text"
                label="COM_EQA_FORM_SUBJECT_CREDITS_LABEL"
        />
        <field
                name="testbankyear"
                type="number"
                label="COM_EQA_FORM_SUBJECT_TESTBANKYEAR_LABEL"
        />
        <field
                name="finaltesttype"
                type="testtype"
                label="COM_EQA_FORM_SUBJECT_TESTTYPE_LABEL"
        />
        <field
                name="finaltestweight"
                type="text"
                default="0.7"
                label="COM_EQA_FORM_SUBJECT_FINALTESTWEIGHT_LABEL"
                required='true'
        />
        <field
                name="pmarks"
                type="textarea"
                label="COM_EQA_FORM_SUBJECT_PMARKS_LABEL"
        />
        <field
                name="testbanks"
                type="textarea"
                label="COM_EQA_FORM_SUBJECT_TESTBANKS_LABEL"
        />
        <field
                name="description"
                type="textarea"
                label="COM_EQA_GENERAL_DESC"
        />
        <field
                name="created_by"
                type="text"
                readonly="true"
                label="COM_EQA_GENERAL_CREATED_BY"
        />
        <field
                name="created_at"
                type="text"
                readonly="true"
                label="COM_EQA_GENERAL_CREATED_AT"
        />
        <field
                name="updated_by"
                type="text"
                readonly="true"
                label="COM_EQA_GENERAL_UPDATED_BY"
        />
        <field
                name="updated_at"
                type="text"
                readonly="true"
                label="COM_EQA_GENERAL_UPDATED_AT"
        />
    </fieldset>
</form>
