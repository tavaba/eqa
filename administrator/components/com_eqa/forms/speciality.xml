<?xml version="1.0" encoding="utf-8" ?>
<form>
    <fieldset name="speciality">
        <field
                name="id"
                type="hidden"
        />

        <field
                name="code"
                type="text"
                label="COM_EQA_FORM_SPECIALITY_CODE_LABEL"
                description="ATTT, CNTT, ĐTVT..."
                required="true"
                pattern="[A-ZĐ]{2,10}"
        />
        <field
                name="name"
                type="text"
                label="COM_EQA_FORM_SPECIALITY_NAME_LABEL"
                description="An toàn thông tin, ..."
                required="true"
        />
        <field
                name="description"
                type="textarea"
                label="COM_EQA_GENERAL_DESC"
        />
        <field name="published" type="list" readonly="true"  required="true" label="JSTATUS" default="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
        <field
                name="created_by"
                type="text"
                readonly="true"
                label="COM_EQA_GENERAL_CREATED_BY"
        />
        <field
                name="created_at"
                type="text"
                readonly="true"
                label="COM_EQA_GENERAL_CREATED_AT"
        />
        <field
                name="updated_by"
                type="text"
                readonly="true"
                label="COM_EQA_GENERAL_UPDATED_BY"
        />
        <field
                name="updated_at"
                type="text"
                readonly="true"
                label="COM_EQA_GENERAL_UPDATED_AT"
        />
    </fieldset>
</form>