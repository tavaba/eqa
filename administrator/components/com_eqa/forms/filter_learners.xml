<?xml version="1.0" encoding="utf-8" ?>
<form>
    <fields name="filter" addfieldprefix="Kma\Component\Eqa\Administrator\Field">
        <field
                name="search"
                type="text"
                label="JSEARCH_FILTER"
                hint="JSEARCH_FILTER"
                class="js-stools-search-string"
        />
        <field
                name="admissionyear"
                type="passyear"
                label="COM_EQA_FORM_LEARNERS_FILTER_ADMISSIONYEAR_LABEL"
                default=""
                onchange="this.form.submit();"
        >
            <option value="">COM_EQA_FORM_LEARNERS_FILTER_ADMISSIONYEAR_MSG</option>
        </field>
        <field
                name="course_id"
                type="course"
                default=""
                class="select2-basic"
                label="COM_EQA_FORM_LEARNERS_FILTER_COURSE_LABEL"
                onchange="this.form.submit();"
        >
            <option value="">COM_EQA_FORM_LEARNERS_FILTER_COURSE_MSG</option>
        </field>
        <field
                name="group_id"
                type="group"
                default=""
                class="select2-basic"
                label="COM_EQA_FORM_LEARNERS_FILTER_GROUP_LABEL"
                onchange="this.form.submit();"
        >
            <option value="">COM_EQA_FORM_LEARNERS_FILTER_GROUP_MSG</option>
        </field>
        <field
                name="debtor"
                type="list"
                label="COM_EQA_DEBT"
                default=""
                onchange="this.form.submit();"
        >
            <option value="">COM_EQA_DEBT_REQUEST</option>
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="published"
                type="list"
                label="COM_EQA_FILTER_STATE_LABEL"
                default=""
                onchange="this.form.submit();"
        >
            <option value="">COM_EQA_FILTER_STATE_MSG</option>
            <option value="1">COM_EQA_FILTER_STATE_OPTION_PUBLISHED</option>
            <option value="0">COM_EQA_FILTER_STATE_OPTION_UNPUBLISHED</option>
        </field>
    </fields>
    <fields name="list">
        <field
                name="fullordering"
                type="hidden"
                value=""
        />
        <field
                name="limit"
                type="limitbox"
                label="JGLOBAL_LIST_LIMIT"
                onchange="this.form.submit();" />

    </fields>

</form>