<?xml version="1.0" encoding="utf-8" ?>
<form>
    <fields name="filter" addfieldprefix="Kma\Component\Eqa\Administrator\Field">
        <field
                name="search"
                type="text"
                label="JSEARCH_FILTER"
                hint="JSEARCH_FILTER"
                class="js-stools-search-string"
        />
        <field
                name="academicyear_id"
                type="academicyear"
                label="Năm học"
                default=""
                onchange="this.form.submit();"
        >
            <option value="">- Năm học -</option>
        </field>
        <field
                name="term"
                type="term"
                default=""
                label="Học kỳ"
                onchange="this.form.submit();"
        />
        <field
                name="course_id"
                type="course"
                default=""
                class="select2-basic"
                label="COM_EQA_FORM_LEARNERS_FILTER_COURSE_LABEL"
                onchange="this.form.submit();"
        >
            <option value="">COM_EQA_FORM_LEARNERS_FILTER_COURSE_MSG</option>
        </field>
        <field
                name="group_id"
                type="group"
                default=""
                class="select2-basic"
                label="COM_EQA_FORM_LEARNERS_FILTER_GROUP_LABEL"
                onchange="this.form.submit();"
        >
            <option value="">COM_EQA_FORM_LEARNERS_FILTER_GROUP_MSG</option>
        </field>
    </fields>
    <fields name="list">
        <field
                name="fullordering"
                type="hidden"
                value=""
        />
        <field
                name="limit"
                type="limitbox"
                label="JGLOBAL_LIST_LIMIT"
                onchange="this.form.submit();" />

    </fields>

</form>