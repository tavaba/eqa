<?xml version="1.0" encoding="utf-8" ?>
<form>
    <fieldset name="learner" addfieldprefix="Kma\Component\Eqa\Administrator\Field">
        <field
                name="id"
                type="hidden"
        />

        <field
                name="code"
                type="text"
                label="COM_EQA_FORM_LEARNER_CODE_LABEL"
                required="true"
                pattern="[A-Z0-9\-\.]{2,10}"
                hint="AT120101"
        />
        <field
                name="lastname"
                type="text"
                label="COM_EQA_FORM_LEARNER_LAST_NAME_LABEL"
                required="true"
                hint="Nguyễn Thị Bích"
        />
        <field
                name="firstname"
                type="text"
                label="COM_EQA_FORM_LEARNER_FIRST_NAME_LABEL"
                required="true"
                hint="Giang"
        />
        <field
                name="group_id"
                type="group"
                required="true"
                class="select2-basic"
                label="COM_EQA_FORM_LEARNER_GROUP_LABEL"
        >
            <option value="">COM_EQA_FORM_LEARNER_GROUP_REQUEST</option>
        </field>
        <field
                name="description"
                type="textarea"
                label="COM_EQA_GENERAL_DESC"
                hint="Chuyển từ khóa xxx sang khóa yyy"
        />
        <field
                name="created_by"
                type="text"
                readonly="true"
                label="COM_EQA_GENERAL_CREATED_BY"
        />
        <field
                name="created_at"
                type="text"
                readonly="true"
                label="COM_EQA_GENERAL_CREATED_AT"
        />
        <field
                name="updated_by"
                type="text"
                readonly="true"
                label="COM_EQA_GENERAL_UPDATED_BY"
        />
        <field
                name="updated_at"
                type="text"
                readonly="true"
                label="COM_EQA_GENERAL_UPDATED_AT"
        />
    </fieldset>
</form>
