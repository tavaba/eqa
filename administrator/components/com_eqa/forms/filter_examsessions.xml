<?xml version="1.0" encoding="utf-8" ?>
<form>
    <fields name="filter" addfieldprefix="Kma\Component\Eqa\Administrator\Field">
        <field
                name="search"
                type="text"
                label="JSEARCH_FILTER"
                hint="JSEARCH_FILTER"
                class="js-stools-search-string"
        />
        <field
                name="examseason_id"
                type="examseason"
                default=""
                class="select2-basic"
                label="COM_EQA_EXAMSEASON"
                onchange="this.form.submit();"
        >
            <option value="">COM_EQA_EXAMSEASON_REQUEST</option>
        </field>
        <field
                name="flexible"
                type="list"
                label="COM_EQA_FLEXIBLE"
                default=""
                onchange="this.form.submit();"
        >
            <option value="">COM_EQA_FLEXIBLE_EXAMSESSION_REQUEST</option>
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
    </fields>
    <fields name="list">
        <field
                name="fullordering"
                type="hidden"
                value=""
        />

        <field
                name="limit"
                type="limitbox"
                label="JGLOBAL_LIST_LIMIT"
                onchange="this.form.submit();" />

    </fields>

</form>